{
	"manifest_version" : 2,
	"name": "FB Font Changer",
	"description": "Change Arabic font on Facebook",
	"version": "0.1",
	"content_scripts": [
		{
			"matches" : [
				"*://*.facebook.com/*"
			],
			"js": ["content.js"]
		}
	],
	"browser_action": {
		"default_icon": "icon.png",
		"default_title": "FB Arabic Font", 
		"default_popup": "popup.html" 
	},
	 "icons": { "16": "icons/16.png",
             "48": "icons/48.png",
            "128": "icons/128.png" }

}
